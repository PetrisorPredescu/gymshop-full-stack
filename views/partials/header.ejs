<div class="header mt-3">

    <div class="navLeft">
        <h1 onclick="window.location.href='/'">TheGymShop</h1>
    </div>
    <div class="navCenter">
        <a href="/" class="btn btn-secondary btn-block">Home</a>

        <% if(typeof user!="object" ) { %>
            <a href="/users/register" class="btn btn-primary btn-block mb-2">Register</a>
            <a href="/users/login" class="btn btn-secondary btn-block">Login</a>
        <% } %>
        <% if (typeof user=="object" && user.name=="GymShop Admin" ) { %>
            <a href="/product_manager" class="btn btn-secondary btn-block mb-2" id="logout"
                style="white-space: nowrap">Product Manager</a>
            <a href="/orders_manager" class="btn btn-secondary btn-block mb-2" id="logout"
                style="white-space: nowrap">Orders Manager</a>
        <% } %>

        <% if (typeof user=="object" && user.name!="GymShop Admin" ) { %>
            <a href="/products" class="btn btn-secondary btn-block">Products</a>
            <a href="/myprofile" class="btn btn-secondary btn-block">MyProfile</a>
        <% } %>
        <% if(typeof user!="object" ) { %>            
            <a href="/products" class="btn btn-secondary btn-block">Products</a>
        <% } %>
        <% if(typeof user=="object" ) { %>
            <a href="/users/logout" class="btn btn-secondary btn-block mb-2" id="logout">Logout</a>
        <% } %>
    </div>
    <div class="navRight">
        <% if (typeof user=="object" ) { %>
            <% if ( user.name !="GymShop Admin" ) { %>
                <a href="/contact" class="btn btn-secondary btn-block">Contact</a>
                <% } } else { %>
                    <a href="/contact" class="btn btn-secondary btn-block">Contact</a>
                    <% } %>
    </div>













</div>